<div class="cs-container">
    <div class="cs-container__inner">
        {% set items = [] %}

        {% for product in products %}

            {% set productMix = 'cs-products-grid__item' %}
            {% set bottompart = product.addToCartButtonHtml %}

            {% set content %}
                {% include locate( 'grid-product/grid-product.twig' ) with {
                    namespace: 'cs-',
                    lazyload: true,
                    showWrapper: true,
                    tag: 'div',
                    url: product.url,
                    image: {
                        src: product.image,
                        alt: product.name,
                    },
                    name: product.name,
                    priceMoved: true,
                    price: product.price,
                    hotspots: {
                        after: {
                            name: '
                            <div class="cs-grid-product__info">
                                ' ~ product.price ~ '
                                ' ~ bottompart ~'
                            </div>'
                        }
                    }
                } %}
            {% endset %}

            {% set items = items|merge( [ {
                content: content
            } ] ) %}
        {% endfor %}

        {% include locate('components/products-promo/products-promo.twig') with {
            namespace: 'cs-',
            showPagination: true,
            showNavigation: true,
            products: items
        } %}
    </div>
</div>
