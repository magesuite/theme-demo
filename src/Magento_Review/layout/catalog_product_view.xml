<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<update handle="review_product_form_component"/>
<body>

    <referenceContainer name="cc-content.container">
        <block class="Creativestyle\FrontendExtension\Block\Twig" template="headline/headline.twig">
            <arguments>
                <argument name="namespace" xsi:type="string">cs-</argument>
                <argument name="tag" xsi:type="string">h2</argument>
                <argument name="title" xsi:type="string" translate="true">Reviews</argument>

            </arguments>
        </block>
        <container name="reviews.wrapper" htmlTag="div" htmlClass="cs-reviews__wrapper" htmlId="reviews" />
    </referenceContainer>

    <move element="reviews.tab" destination="reviews.wrapper"/> 

</body>
</page>