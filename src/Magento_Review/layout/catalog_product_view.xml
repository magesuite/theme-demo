<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<update handle="review_product_form_component"/>
<body>

    <referenceContainer name="cc-content.container">
        <block class="Magento\Catalog\Block\Product\View" name="reviews.headline" as="reviews_headline" template="Magento_Review::headline.phtml"/>
        <container name="reviews.wrapper" htmlTag="div" htmlClass="cs-reviews__wrapper"/>
    </referenceContainer>

    <move element="reviews.tab" destination="reviews.wrapper"/> 

</body>
</page>