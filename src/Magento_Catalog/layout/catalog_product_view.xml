<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceContainer name="product.media.container.column" htmlTag="div" htmlClass="cs-container__main-column cs-container__main-column--space-top" />

        <move element="product.info.main" destination="product.media.container.column" after="-"/>

        <referenceContainer name="product.info.main" htmlTag="div" htmlClass="product-info-main cs-product-sale-block" />
        <referenceBlock name="product.category.name" remove="true"/>
        <referenceBlock name="product.info.share" remove="true"/>
        <referenceBlock name="product.info.addto" remove="true"/>

        <move element="product.info.special.attributes" destination="product.info.main" after="page.main.title"/>

        <referenceContainer name="product.info.main" >
            <container name="sale.block.add.line" htmlClass="cs-product-sale-block__add-line" htmlTag="div" after="page.main.title" />
        </referenceContainer>

        <referenceBlock name="product.info.addtocart">
            <block class="Magento\Catalog\Block\Product\View" name="sale.block.shipping" template="Magento_Catalog::product/view/shipping.phtml" after="-"/>
        </referenceBlock>

        <move element="product.info" destination="sale.block.add.line" />
        <move element="product.info.price" destination="sale.block.add.line" before="-" />

        <referenceContainer name="product.details.container" htmlTag="div" htmlClass="cs-container" />

        <move element="cc-content.container" destination="content" after="product.details.container" />

        <move element="page.messages" destination="product.media.container.wrapper" before="-" />

        <referenceContainer name="product.carousels.container"  htmlClass="cs-container cs-container--carousels" />

        <referenceBlock name="product.info.description">
            <arguments>
                <argument name="is_collapse_enabled" xsi:type="boolean">false</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="product.attributes">
            <arguments>
                <argument name="is_collapse_enabled" xsi:type="boolean">false</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="cc-content.container">
            <block class="Magento\Catalog\Block\Product\View\Attributes" name="product.hints" template="Magento_Catalog::product/view/hints.phtml"/>
        </referenceContainer>

        <!--remove special attributes and add product highlights-->
        <referenceBlock name="product.info.special.attributes" remove="true" />
        <referenceContainer name="product.details.specials" htmlTag="div" htmlClass="cs-product-sale-block__item">
            <block class="Magento\Catalog\Block\Product\View\Attributes" name="product.info.highlights" template="Magento_Catalog::product/view/highlights.phtml" after="-"/>
        </referenceContainer>

        <move element="product.info.review" destination="product.info.main" before="product.details.specials" />

        <referenceContainer name="product.info.price">
            <block class="Magento\Cms\Block\Block" name="product.info.price.fares">
                <arguments>
                    <argument name="block_id" xsi:type="string">pdp_fares_info</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>