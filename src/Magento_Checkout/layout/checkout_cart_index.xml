<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceContainer name="checkout.cart.column" htmlTag="div" htmlClass="cs-container__main-column">
            <!--Container for static block (banner)-->
            <container name="checkout.cart.banner" htmlTag="div" htmlClass="cs-cart-page__banners" after="-">
                <block class="Magento\Framework\View\Element\Template" name="cart.banners" template="Magento_Theme::html/cart-banners.phtml"/>
            </container>
        </referenceContainer>

    </body>
</page>
