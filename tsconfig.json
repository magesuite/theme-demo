{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES5",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "outDir": ".tmp"
  },
  "filesGlob": [
    "!node_modules",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "src/bundle.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
